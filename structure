lib/
 ├─ main.dart                 # точка входа
 ├─ core/                     # базовые вещи приложения
 │   ├─ constants.dart        # цвета, шрифты, строки
 │   ├─ theme.dart            # тема приложения (шрифт Albert Sans и цвета)
 │   └─ widgets/              # общие виджеты (кнопка, карточка, иконка)
 ├─ features/                 # фичи приложения
 │   ├─ home/                 # главный экран (фильм недели)
 │   │   ├─ data/             # модель фильма, API (например, запрос на сервер)
 │   │   ├─ logic/            # контроллер / провайдер для HomeScreen
 │   │   └─ ui/               # экран и виджеты главного экрана
 │   ├─ search/               # поиск фильмов
 │   │   ├─ data/
 │   │   ├─ logic/
 │   │   └─ ui/
 │   ├─ profile/              # профиль пользователя
 │   │   ├─ data/
 │   │   ├─ logic/
 │   │   └─ ui/
 │   └─ favorites/            # избранные фильмы
 │       ├─ data/
 │       ├─ logic/
 │       └─ ui/
 ├─ common/                   # общие вещи между фичами
 │   ├─ widgets/              # карточки фильмов, кнопки, рейтинги
 │   └─ utils/                # вспомогательные функции (например, формат даты)
 └─ assets/                   # ресурсы
     ├─ images/               # постеры фильмов, иконки
     └─ fonts/                # шрифты (Albert Sans)
